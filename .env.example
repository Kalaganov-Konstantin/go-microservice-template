ENV=development

LOGGER_LEVEL=info
LOGGER_FORMAT=json

HTTP_SERVER_HOST=0.0.0.0
HTTP_SERVER_PORT=8080
HTTP_SERVER_READ_TIMEOUT=30
HTTP_SERVER_WRITE_TIMEOUT=30
HTTP_SERVER_IDLE_TIMEOUT=120

RATE_LIMIT_GLOBAL_REQUESTS=1000
RATE_LIMIT_GLOBAL_WINDOW=60
RATE_LIMIT_REQUESTS_PER_IP=100
RATE_LIMIT_WINDOW_SECONDS=60

CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-CSRF-Token
CORS_EXPOSED_HEADERS=
CORS_ALLOW_CREDENTIALS=false
CORS_MAX_AGE=86400

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=microservice
POSTGRES_SSL_MODE=disable
POSTGRES_MAX_OPEN_CONNS=25
POSTGRES_MAX_IDLE_CONNS=5
POSTGRES_CONN_MAX_LIFETIME=5m
POSTGRES_CONN_MAX_IDLE_TIME=5m

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Host ports for external access
HOST_SERVICE_PORT=8080
HOST_POSTGRES_PORT=5432
HOST_REDIS_PORT=6379
HOST_PROMETHEUS_PORT=9090
HOST_GRAFANA_PORT=3000

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin123

# Service discovery for Prometheus
SERVICE_NAME=microservice
SERVICE_METRICS_PORT="${HTTP_SERVER_PORT}"
PROMETHEUS_SCRAPE_INTERVAL=15s
SERVICE_SCRAPE_INTERVAL=5s
