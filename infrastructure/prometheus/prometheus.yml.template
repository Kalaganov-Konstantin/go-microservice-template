global:
  scrape_interval: ${PROMETHEUS_SCRAPE_INTERVAL}
  evaluation_interval: ${PROMETHEUS_SCRAPE_INTERVAL}

rule_files:
#   - "first_rules.yml"
#   - "second_rules.yml"

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:${PROMETHEUS_PORT}']

  - job_name: 'microservice'
    static_configs:
      - targets: ['microservice:${SERVICE_METRICS_PORT}']
    metrics_path: '/metrics'
    scrape_interval: ${SERVICE_SCRAPE_INTERVAL}
